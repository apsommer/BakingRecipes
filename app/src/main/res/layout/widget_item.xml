<?xml version="1.0" encoding="utf-8"?>
<!-- margins on this RelativeLayout are irrelevant -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_widget_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark" >

    <!-- RemoteViews will not accept custom font -->
    <TextView
        android:id="@+id/tv_widget_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:typeface="serif"
        android:textSize="32sp"
        android:background="@color/white"
        android:textColor="@android:color/black"
        tools:text="Crumble Cake"
        android:paddingTop="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/white"
        android:layout_below="@id/tv_widget_name" >

        <TextView
            android:id="@+id/tv_widget_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:typeface="serif"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="8dp"
            android:background="@null"
            tools:text="8" />

        <TextView
            android:id="@+id/tv_widget_servings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/gray"
            android:background="@null"
            android:text=" servings" />

    </LinearLayout>

</RelativeLayout>


