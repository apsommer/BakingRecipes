<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/widget_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:typeface="serif"
            android:background="@null"
            android:textColor="@android:color/black"
            android:text="Nutella Pie"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/rl_widget_subtitle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/tv_name" >

            <TextView
                android:id="@+id/tv_servings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:background="@null"
                android:text="8 " />

            <TextView
                android:id="@+id/tv_servings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:typeface="serif"
                android:textColor="@color/gray"
                android:background="@null"
                android:text=" servings" />

        </LinearLayout>

        <!-- margins on this GridView are irrelevant -->
        <GridView
            android:id="@+id/gd_widget_grid"
            android:layout_below="@id/rl_widget_subtitle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@null"
            android:numColumns="1"
            />

        <!-- empty state all shown when remoteviews adapter is loading -->
        <RelativeLayout
            android:id="@+id/rl_widget_grid_empty_view"
            android:layout_width="match_parent"
            android:layout_below="@id/rl_widget_subtitle_container"
            android:layout_height="match_parent"
            android:background="@null">

            <ImageView
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:alpha="0.75"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:textAlignment="center"
                android:text="Loading ingredients ..."
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>